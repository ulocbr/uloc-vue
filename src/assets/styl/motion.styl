@keyframes u-highlight
  0%
    background $lime-6
  100%
    background transparent

.highlight-and-fade
  animation u-highlight 2s

@keyframes u-rotate
  0%
    transform rotate(0) /* rtl:ignore */
  25%
    transform rotate(90deg) /* rtl:ignore */
  50%
    transform rotate(180deg) /* rtl:ignore */
  75%
    transform rotate(270deg) /* rtl:ignore */
  100%
    transform rotate(360deg) /* rtl:ignore */

.transition-generic
  transition all .3s

.animate-spin, .animate-spin-reverse
  animation u-spin 2s infinite linear
.animate-spin-reverse
  animation-direction reverse
.animate-blink
  animation u-blink 1s steps(5, start) infinite
.animate-pop
  animation u-pop .2s
.animate-scale
  animation u-scale .2s
.animate-fade
  animation u-fade .2s
.animate-bounce
  animation u-bounce 2s infinite

@keyframes u-blink
  to
    visibility hidden

@keyframes u-spin
  0%
    transform rotate(0deg) /* rtl:ignore */
  100%
    transform rotate(359deg) /* rtl:ignore */

@keyframes u-pop
  0%
    opacity 0
    transform scale(.7)
  70%
    opacity 1
    transform scale(1.07)
  100%
    transform scale(1)

@keyframes u-fade
  0%
    opacity 0
  100%
    opacity 1

@keyframes u-scale
  0%
    opacity 0
    transform scale(.7)
  100%
    opacity 1
    transform scale(1)

@keyframes u-bounce
  0%, 20%, 50%, 80%, 100%
    transform translateY(0)
  40%
    transform translateY(-30px)
  60%
    transform translateY(-15px)

.animate-popup-up__, .animate-popup-down__
  nimation-timing-function cubic-bezier(0.23, 1, 0.32, 1)

.animate-popup-down__
  animation u-popup-down .42s
  transform-origin left top 0px

.animate-popup-up__
  animation u-popup-up .42s
  transform-origin left bottom 0px

@keyframes u-popup-down
  0%
    opacity 0
    transform translateY(-20px) scaleY(.3)
    // pointer-events none
  100%
    opacity 1

@keyframes u-popup-up
  0%
    opacity 0
    transform translateY(20px) scaleY(.3)
    // pointer-events none
  100%
    opacity 1

.animated
  animation-duration 1s
  animation-fill-mode both

.animated.infinite
  animation-iteration-count infinite
.animated.hinge
  animation-duration 2s

.animated.flipOutX,
.animated.flipOutY,
.animated.bounceIn,
.animated.bounceOut
  animation-duration .75s

.content-transition {
  transition: all .35s ease;
  /*position: absolute;*/
}

.slide-enter {
  opacity: 0;
  transform: translate(0, 60px);
}

.slide-leave, .slide-leave-active {
  display: none !important;
}
