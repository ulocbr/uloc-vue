img
  max-width: 100%

fieldset
  border: none

main
  display: block

[hidden], template
  display: none

small
  font-size: 12px

button::-moz-focus-inner, input::-moz-focus-inner
  border: 0
  padding: 0

// SCROLLBAR
::-webkit-scrollbar
  width: 8px
  height: 8px

::-webkit-scrollbar-button
  width: 0
  height: 0

::-webkit-scrollbar-thumb
  background: #c0d0e6
  border: 8px none #fff
  border-radius: 10px

::-webkit-scrollbar-thumb:hover
  background: #9aaabe

::-webkit-scrollbar-thumb:active
  background: #9aaabe

::-webkit-scrollbar-track
  background: #e6ecf5
  border: 9px none #fff
  border-radius: 10px
  margin: 6px 0

::-webkit-scrollbar-track:hover
  background: #e6ecf5

::-webkit-scrollbar-track:active
  background: #e6ecf5

::-webkit-scrollbar-corner
  background: transparent
