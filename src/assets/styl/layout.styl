  -moz-osx-font-smoothing: grayscale
  margin: 0
  padding: 0
  box-sizing: border-box

*:after, *:before
  box-sizing: border-box

*:focus
  outline: none

html, body
  font-size 13px
  height: 100%

body
  font-family: $font-family-base
  font-weight: normal
  line-height: 1
  color: #0c0c0c // #293e52
  background: #ecf1f8
  overflow: hidden
  font-size 100%

body a
  font-family: $font-family-base
  font-weight: 300
  color: #0081ff
  text-decoration: none

body a:hover
  cursor: pointer

body a:focus
  outline: none

body p
  // color: #192c3d
  font-size: $font-size-base
  line-height: 1.4
  font-weight normal

body img
  -webkit-transform: translateZ(0) translate3D(0, 0, 0)
  transform: translateZ(0) translate3D(0, 0, 0)
  -webkit-backface-visibility: hidden
  backface-visibility: hidden

