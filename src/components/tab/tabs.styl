.u-tabs
  flex-direction column

.u-tabs-scroller
  overflow hidden

.u-tab-pane
  padding $tabs-pane-padding
  border $tabs-pane-border

.u-tabs-no-pane-border .u-tab-pane
  border 0

.u-tabs-panes:empty
  display none

.u-tabs-normal
  .u-tab-icon, .u-tab-label
    opacity $tabs-unselected-opacity

.u-tab
  cursor pointer
  transition color .3s, background .3s
  white-space nowrap
  user-select none
  padding $tabs-padding
  min-height $tabs-min-height
  text-transform $tabs-text-transform

  &.u-link
    outline 0

  .u-tab-icon-parent + .u-tab-label-parent
    margin-top 4px

  .u-chip
    top -8px
    right -10px
    left auto
    min-height auto
    color white
    background alpha($dot-color, .75)

  &.active
    .u-tab-icon, .u-tab-label
      opacity 1

.u-tab-label
  text-align center

.u-tab-icon
  font-size $tabs-icon-font-size

.u-tab-focus-helper
  z-index -1
  outline 0
  &:focus
    z-index unset
    background currentColor
    opacity .1

@media (max-width $breakpoint-sm-max)
  .u-tab
    &.hide-icon .u-tab-icon-parent,
    &.hide-label .u-tab-label-parent
      display none !important
    &.hide-icon .u-tab-label
      margin-top 0
  .u-tab-full.hide-none .u-tab-label-parent .u-tab-meta
    display none !important

@media (min-width $breakpoint-md-min)
  .u-tab-full .u-tab-label-parent .u-tab-meta
    display none !important

@media (max-width $breakpoint-md-max)
  .u-tabs-head:not(.scrollable)
    .u-tabs-scroller, .u-tab
      flex 1 1 auto

@media (min-width $breakpoint-lg-min)
  .u-tab
    padding-left $tabs-big-screen-horiz-padding
    padding-right $tabs-big-screen-horiz-padding
  .u-tabs-head:not(.scrollable)
    padding-left $tabs-big-screen-side-padding
    padding-right $tabs-big-screen-side-padding

.u-tabs-head
  min-height $tabs-min-height
  overflow hidden
  font-size $tabs-font-size
  font-weight $tabs-font-weight
  transition color .18s ease-in, box-shadow .18s ease-in
  position relative

  &:not(.scrollable)
    .u-tabs-left-scroll, .u-tabs-right-scroll
      display none !important

.u-tabs-left-scroll, .u-tabs-right-scroll
  position absolute
  height 100%
  cursor pointer
  color white
  top 0
  .u-icon
    text-shadow 0 0 10px black
    font-size (1.2 * $tabs-icon-font-size)
    visibility hidden
  &.disabled
    display none
.u-tabs:hover
  .u-tabs-left-scroll, .u-tabs-right-scroll
    .u-icon
      visibility visible

.u-tabs-left-scroll
  left 0 /* rtl:ignore */
.u-tabs-right-scroll
  right 0 /* rtl:ignore */

.u-tabs-align-justify
  .u-tabs-scroller, .u-tab
    flex 1 1 auto
.u-tabs-align-center
  justify-content center
.u-tabs-align-right
  justify-content flex-end

.u-tabs-bar
  border $tabs-border-width solid currentColor
  border-width 0
  position absolute
  height 0
  left 0
  right 0
.u-tabs-global-bar
  width 1px
  transform scale(0)
  transform-origin left center
  transition transform
  transition-duration .15s
  transition-timing-function cubic-bezier(.4, .0, 1, 1)
  &.contract
    transition-duration .18s
    transition-timing-function cubic-bezier(.0, .0, .2, 1)

.u-tabs-global-bar-container.highlight > .u-tabs-global-bar
  display none

.u-tabs-two-lines .u-tab
  white-space normal
  .u-tab-label
    overflow hidden
    display -webkit-box
    -webkit-box-orient vertical
    -webkit-line-clamp 2

.u-tabs-position-top
  .u-tabs-bar
    bottom 0
    border-bottom-width $tabs-border-width

.u-tabs-position-bottom
  .u-tabs-bar
    top 0
    border-top-width $tabs-border-width
  .u-tabs-panes
    order -1

.u-tabs-inverted
  .u-tabs-head
    background white

  &.u-tabs-position-top
    .u-tabs-panes
      border-top $tabs-pane-border
    .u-tab-pane
      border-top 0

  &.u-tabs-position-bottom
    .u-tabs-panes
      border-bottom $tabs-pane-border
    .u-tab-pane
      border-bottom 0

body.mobile .u-tabs-scroller
  overflow-y hidden
  overflow-x auto
  will-change scroll-position
  -webkit-overflow-scrolling touch

body.desktop .u-tab
  &:before
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    opacity .1
    background currentColor
  &:hover:before
    content ''
