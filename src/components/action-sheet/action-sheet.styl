.u-actionsheet-title
  min-height 56px
  padding 0 16px
  color $faded
  color var(--u-color-faded)

.u-actionsheet-body
  max-height 500px

.u-actionsheet-grid
  padding 8px 16px
  .u-item-separator-component
    margin 24px 0

.u-actionsheet-grid-item
  padding 8px 16px
  transition background .3s
  &:hover, &:focus
    background $action-sheet-hover-background
    outline 0
  i, img
    font-size 48px
    margin-bottom 8px
  .avatar
    width 48px
    height 48px
  span
    color $faded
    color var(--u-color-faded)
