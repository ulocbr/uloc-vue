.u-item-stamp
  font-size $item-stamp-font-size
  line-height $item-stamp-font-size
  white-space nowrap
  margin .3rem 0

.u-item-side
  color $item-side-color
  flex 0 0 auto
  min-width $item-primary-size
.u-item-side-right
  text-align right
.u-item-avatar, .u-item-avatar img
  width $item-primary-size
  height $item-primary-size
  border-radius 50%

.u-item-letter, .u-item-icon
  font-size $item-icon-size
.u-item-inverted
  border-radius 50%
  color white
  background $item-side-color
  height $item-primary-size
  width $item-primary-size
  &, .u-icon
    font-size $item-inverted-icon-size

.u-item-main
  flex 1 1 auto
  min-width 0
.u-item-main-inset
  margin-left ($item-gutter + $item-primary-size)

.u-item-label > span
  color $item-content-secondary-text-color
.u-item-sublabel
  color $item-content-secondary-text-color
  font-size 90%
  margin-top .2rem
  > span
    font-weight 500

.u-item-section + .u-item-section
  margin-left $item-gutter

.u-item
  position relative
  display flex
  align-items center
  font-size $item-font-size
  text-align left

  padding ($item-padding / 2) $item-padding
  min-height $item-min-height

  &.active, &.{$router-link-active}, &:focus
    background $item-active-color

  &:focus
    outline 0

.u-item-image
  min-width $item-image-size
  max-width $item-image-size
  max-height $item-image-size

.u-list-multiline > .u-item, .u-item-multiline
  align-items flex-start

.u-list-link > .u-item, .u-item-link
  cursor pointer

.u-list-highlight > .u-item, .u-item-highlight,
.u-list-link > .u-item, .u-item-link
  &:hover
    background $item-highlight-color

.u-list-separator > .u-item-division + .u-item-division, .u-item-division + .u-item-separator
  border-top 1px solid $item-separator-color
.u-list-inset-separator > .u-item-division + .u-item-division, .u-item-division + .u-item-inset-separator
  &:after
    content ''
    position absolute
    top 0
    right 0
    left ($item-padding + $item-gutter + $item-primary-size)
    height 1px
    background $item-separator-color

.u-list-dense > .u-item, .u-item-dense
  padding round($item-padding * $item-dense-factor) $item-padding
  min-height round($item-min-height * $item-dense-factor)
.u-list-sparse > .u-item, .u-item-sparse
  padding ($item-padding * $item-sparse-factor) $item-padding
  min-height ($item-min-height * $item-sparse-factor)

.u-list-striped > .u-item:nth-child(even)
  background-color $item-stripe-color
.u-list-striped-odd > .u-item:nth-child(odd)
  background-color $item-stripe-color

.u-list
  border 1px solid $item-separator-color
  padding ($item-padding / 2) 0

.u-item-separator-component
  margin ($item-padding / 2) 0
  height 1px
  border 0
  background-color $item-separator-color
  &:last-child
    display none
  & + .u-list-header
    margin-top (- $item-padding / 2)
.u-item-separator-inset-component
  margin-left ($item-padding + $item-gutter + $item-primary-size)

.u-list-header
  color $item-label-color
  font-size 14px
  font-weight 500
  line-height 18px
  min-height 48px
  padding 15px $item-padding
.u-list-header-inset
  padding-left ($item-padding + $item-gutter + $item-primary-size)


.u-list-dark, .u-item-dark
  .u-item-side
    color $item-side-dark-color
  .u-item-inverted
    color black
    background $item-side-dark-color
  .u-item-label > span, .u-item-sublabel
    color $item-content-secondary-text-dark-color
  .u-item
    color white
    &.active, &.{$router-link-active}, &:focus
      background $item-active-dark-color
.u-list-dark
  border 1px solid $item-separator-dark-color
  &.u-list-separator > .u-item-division + .u-item-division, .u-item-division + .u-item-separator
    border-top 1px solid $item-separator-dark-color
  &.u-list-inset-separator > .u-item-division + .u-item-division, .u-item-division + .u-item-inset-separator
    &:after
      background $item-separator-dark-color
  &.u-list-striped > .u-item:nth-child(even)
    background-color $item-stripe-dark-color
  &.u-list-striped-odd > .u-item:nth-child(odd)
    background-color $item-stripe-dark-color
  .u-item-separator-component
    background-color $item-separator-dark-color
  .u-list-header
    color $item-label-dark-color

  &.u-list-highlight > .u-item, .u-item-highlight,
  &.u-list-link > .u-item, .u-item-link
    &:hover
      background $item-highlight-dark-color
