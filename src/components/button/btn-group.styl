.u-btn-group
  border-radius $button-border-radius
  -box-shadow(0 1px 1px rgba(90, 90, 90, 0.1))
  vertical-align middle
  > .u-btn-item
    box-shadow none
  > .u-btn-group
    > .u-btn:first-child
      border-top-left-radius inherit
      border-bottom-left-radius inherit
    > .u-btn:last-child
      border-top-right-radius inherit
      border-bottom-right-radius inherit
  > .u-btn-group:not(:first-child) > .u-btn:first-child
    border-left 0
  > .u-btn-group:not(:last-child) > .u-btn:last-child
    border-right 0
  > .u-btn-item:not(:last-child)
    border-top-right-radius 0
    border-bottom-right-radius 0
  > .u-btn-item + .u-btn-item
    border-top-left-radius 0
    border-bottom-left-radius 0
.u-btn-group-push
  border-radius $button-push-border-radius
  > .u-btn-push
    .u-btn-inner
      transition $button-transition
    &:active:not(.disabled)
      border-bottom-color rgba(0, 0, 0, .15)
      transform translateY(0)
      .u-btn-inner
        transform translateY(3px)
.u-btn-group-rounded
  border-radius $button-rounded-border-radius
.u-btn-group-flat, .u-btn-group-outline
  box-shadow none
.u-btn-group-outline
  > .u-btn-item + .u-btn-item
    border-left 0
  > .u-btn-item:not(:last-child)
    border-right 0
