.u-color
  max-width 100vw
  border 1px solid $grey-4
  display inline-block
  width 240px
  background white

.u-color-saturation
  width 100%
  height 123px

.u-color-saturation-white
  background linear-gradient(to right, white, rgba(255, 255, 255, 0))

.u-color-saturation-black
  background linear-gradient(to top, black, rgba(0, 0, 0, 0))

.u-color-saturation-circle
  width 10px
  height 10px
  box-shadow 0 0 0 1.5px white, inset 0 0 1px 1px rgba(0, 0, 0, .3), 0 0 1px 2px rgba(0, 0, 0, .4)
  border-radius 50%
  transform translate(-5px, -5px)

.u-color-swatch, .u-color-alpha .u-slider-track
  background-image url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAgAAAAICAYAAADED76LAAAAH0lEQVQoU2NkYGAwZkAFZ5G5jPRRgOYEVDeB3EBjBQBOZwTVugIGyAAAAABJRU5ErkJggg==') !important

.u-color-swatch
  position relative
  width 32px
  height 32px
  border-radius 50%
  background white

.u-color-hue .u-slider-track
  border-radius 2px
  background linear-gradient(to right, #f00 0%, #ff0 17%, #0f0 33%, #0ff 50%, #00f 67%, #f0f 83%, #f00 100%) // @stylint ignore
  opacity 1
  // height $dot-size * .8 //TODO: DESCOBRIR POR QUE ISSO DÁ ERRO
  &.active-track
    opacity 0

.u-color-alpha .u-slider-track
  position relative
  background white
  opacity 1
  // height $dot-size * .8 //TODO: DESCOBRIR POR QUE ISSO DÁ ERRO
  &:after
    content ''
    position absolute
    left 0
    right 0
    top 0
    bottom 0
    background linear-gradient(90deg, rgba(255, 255, 255, 0), $grey-7)
  &.active-track
    opacity 0

.u-color-sliders
  height 56px
  .u-slider
    height 20px
  .u-slider-handle
    box-shadow 0 1px 4px 0 rgba(0, 0, 0, .37)
  .u-slider-ring
    display none

.u-color-inputs
  font-size 11px
  color $grey-7
  input
    border 1px solid $grey-4
    outline 0
.u-color-padding
  padding 0 2px
.u-color-label
  padding-top 4px

.u-color-dark
  background black
  border 1px solid $grey-9
  input
    background black
    color $light
    color var(--u-color-light)
    border 1px solid $dark
    border 1px solid var(--u-color-dark)
  .u-color-inputs
    color $light
    color var(--u-color-light)
  .u-color-swatch
    border 1px solid $dark
    border 1px solid var(--u-color-dark)
