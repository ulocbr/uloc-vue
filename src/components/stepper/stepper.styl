.u-stepper
  border-radius $generic-border-radius
  box-shadow $shadow-2

.u-stepper-title
  font-size 14px
.u-stepper-subtitle
  font-size 12px
  opacity .7

.u-stepper-dot
  margin-right 8px
  font-size 14px
  width 24px
  height 24px
  border-radius 50%
  background currentColor
  span
    color white

.u-stepper-tab
  padding 24px
  font-size 14px
  flex-direction row
  transition color .28s, background .28s

  &.step-waiting
    color black
    .u-stepper-dot
      color $stepper-label-inactive-color
  &.step-navigation
    user-select none
    cursor pointer
  &.step-color
    color currentColor
  &.step-active .u-stepper-title
    font-weight bold
  &.step-disabled
    color $stepper-label-inactive-color
  &.step-error
    color $negative
    color var(--u-color-negative)
    .u-stepper-dot
      background transparent
      span
        color $negative
        color var(--u-color-negative)
        font-size 24px

.u-stepper-header
  min-height 72px
  &:not(.alternative-labels)
    .u-stepper-tab
      justify-content center
    .u-stepper-dot:after
      display none
  &.alternative-labels
    min-height 104px
    .u-stepper-tab
      padding 24px 32px
      flex-direction column
      justify-content flex-start
    .u-stepper-dot
      margin-right 0
    .u-stepper-label
      margin-top 8px
      text-align center
      &:before, &:after
        display none

.u-stepper-step-content
  color black

.u-stepper-horizontal
  .u-stepper-step-inner
    padding 24px
  .u-stepper-nav
    margin 0 16px 8px
  .u-stepper-step .u-stepper-nav
    margin 16px 0 0
    > div.col
      display none

  .u-stepper-first .u-stepper-dot:before,
  .u-stepper-last .u-stepper-label:after,
  .u-stepper-last .u-stepper-dot:after
    display none
  .u-stepper-tab
    overflow hidden
  .u-stepper-line
    &:before, &:after
      position absolute
      top 50%
      height 1px
      width 100vw
      background $stepper-divider-color
  .u-stepper-label:after, .u-stepper-dot:after
    content ''
    left 100%
    margin-left 8px
  .u-stepper-dot:before
    content ''
    right 100%
    margin-right 8px

.u-stepper-vertical
  padding 8px 0 18px
  .u-stepper-tab
    padding 12px 16px
  .u-stepper-label
    padding-top 4px
  .u-stepper-title
    line-height 18px
  .u-stepper-step-inner
    padding 0 24px 24px 48px
  .u-stepper-nav
    margin-top 16px
    > div.col
      display none

  .u-stepper-first .u-stepper-dot:before,
  .u-stepper-last .u-stepper-dot:after
    display none
  .u-stepper-step
    overflow hidden
  .u-stepper-dot
    &:before, &:after
      content ''
      position absolute
      left 50%
      width 1px
      height 100vh
      background $stepper-divider-color
  .u-stepper-dot:before
    bottom 100%
    margin-bottom 8px
  .u-stepper-dot:after
    top 100%
    margin-top 8px

body.desktop .u-stepper-tab.step-navigation:hover
  background $stepper-hover-background

@media (max-width $breakpoint-sm-max)
  .u-stepper-horizontal.u-stepper-contractable
    .u-stepper-header
      min-height 72px
    .u-stepper-tab
      padding 24px 0
    .u-stepper-tab:not(:last-child)
      .u-stepper-dot:after
        display block !important
    .u-stepper-dot
      margin 0
    .u-stepper-label
      display none
