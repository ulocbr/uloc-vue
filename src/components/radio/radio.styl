$radio-size = 21px

.u-radio-unchecked, .u-radio-checked, .u-radio .u-option-inner
  height $radio-size
  width $radio-size
  min-width $radio-size
  font-size $radio-size
  transition transform .45s cubic-bezier(.23, 1, .32, 1)
  opacity 1

.u-radio-unchecked
  opacity 1
.u-radio-checked
  transform-origin 50% 50% 0
  transform scale(0)

.u-radio .u-option-inner.active
  .u-radio-unchecked
    opacity 0
  .u-radio-checked
    transform scale(1)
